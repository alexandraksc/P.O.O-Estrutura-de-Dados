import java.util.Scanner;
  public class Main{
    public static void main(String[] args){
      Scanner input = new Scanner(System.in);

      double pi = 3.14159;
      double A = input.nextDouble();
      double B = input.nextDouble();
      double C = input.nextDouble();

      double areaTR = (A * C) / 2.0;
      double areaCRC = pi * Math.pow(C, 2);
      double areaTRP = ((A + B)) * C / 2.0;
      double areaQDRD = B * B;
      double areaRTNGL = A * B;

      System.out.printf("Triângulo: %.3f%n", areaTR);
      System.out.printf("Circulo: %.3f%n", areaCRC);
      System.out.printf("Trapézio: %.3f%n", areaTRP);
      System.out.printf("Quadrado: %.3f%n", areaQDRD);
      System.out.printf("Retângulo: %.3f%n", areaRTNGL);
      
      input.close();
  
    }
  }
